{
  "name": "wikramasooriya-backend",
  "version": "1.0.0",
  "description": "Backend API for Wikramasooriya Enterprises e-commerce platform",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:sync": "SYNC_DB=true nodemon src/server.js",
    "db:setup": "powershell -ExecutionPolicy Bypass -File setup-database-simple.ps1",
    "db:setup:batch": "setup-database.bat",
    "db:init": "node src/db/init.js",
    "db:seed": "node src/db/seed.js",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "e-commerce",
    "api",
    "express",
    "postgresql",
    "jwt"
  ],
  "author": "Wikramasooriya Enterprises",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "pg-hstore": "^2.3.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
